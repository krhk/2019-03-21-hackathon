@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav-right">
            <li class="">
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)</a>
            </li>
            <li class="">
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Odhlásit</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav-right not-logged">
        <li><a asp-area="Identity" asp-page="/Account/Register" class="btn btn-link navbar-btn navbar-link is-arrowless">Registrovat</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login" class="btn btn-link navbar-btn navbar-link is-arrowless">Přihlásit</a></li>
    </ul>
}