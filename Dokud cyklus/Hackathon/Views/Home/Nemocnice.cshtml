@model IEnumerable<Hackathon.Models.Nemocnice>

@{
    ViewData["Title"] = "Nemocnice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Nemocnice</h1>

<table class="table" id="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Typ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Urceni)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NazevObce)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NazevPoskytovatele)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ulice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CiscloPopisne)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrdinacniHodiny)
        </th>
        
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Typ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Urceni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NazevObce)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NazevPoskytovatele)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ulice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CiscloPopisne)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrdinacniHodiny)
            </td>
           
        </tr>
    }
    </tbody>
</table>

@section Scripts
{
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#table').DataTable({ "renderer": "bootstrap" });
        });
    </script>
}


@section Styles
{
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.1/css/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css">
}